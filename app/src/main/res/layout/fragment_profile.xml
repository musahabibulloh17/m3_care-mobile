<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_gradient_green"
    android:padding="16dp">

    <!-- Profile Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="90dp"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Profile Picture -->


        <!-- Camera Icon -->

        <ImageView
            android:id="@+id/ivProfile"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:clipToOutline="true"
            android:outlineProvider="background"
            android:scaleType="centerCrop"
            android:src="@drawable/huhhihi" />

        <ImageView
            android:id="@+id/ivEdit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginStart="-36dp"
            android:layout_marginTop="33dp"
            android:background="@drawable/circle_background_secondary"
            android:padding="8dp"
            android:scaleType="center"
            android:src="@drawable/ic_edit" />
    </LinearLayout>

    <!-- Profile Details -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingHorizontal="16dp">

        <!-- Name -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/oval_background"
            android:padding="12dp"
            android:layout_marginTop="30dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_user"
                android:background="@drawable/circle_background_secondary"
                android:padding="4dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/tvNamaLengkap"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Nama Lengkap"
                android:text="Bimasaka"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:enabled="false"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- NIS -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/oval_background"
            android:padding="12dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_card"
                android:background="@drawable/circle_background_secondary"
                android:padding="4dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/tvNIS"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="NIS"
                android:text="21321313"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:enabled="false"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- Email -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/oval_background"
            android:padding="12dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_email"
                android:background="@drawable/circle_background_secondary"
                android:padding="4dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/tvEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Email"
                android:text="Bimasaka@gmail.com"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:enabled="false"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- Phone -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/oval_background"
            android:padding="12dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_phone"
                android:background="@drawable/circle_background_secondary"
                android:padding="4dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/tvTelepon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Telepon"
                android:text="0852360095414"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:enabled="false"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- Kelas -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/oval_background"
            android:padding="12dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_class"
                android:background="@drawable/circle_background_secondary"
                android:padding="4dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/tvKelas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Kelas"
                android:text="12"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:enabled="false"
                android:paddingEnd="8dp" />
        </LinearLayout>

        <!-- Tanggal Lahir -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/oval_background"
            android:padding="12dp"
            android:layout_marginTop="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_calendar"
                android:background="@drawable/circle_background_secondary"
                android:padding="4dp"
                android:layout_gravity="center_vertical" />

            <EditText
                android:id="@+id/tvTanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal Lahir"
                android:text="2004-11-16"
                android:background="@android:color/transparent"
                android:paddingStart="8dp"
                android:enabled="false"
                android:paddingEnd="8dp" />


        </LinearLayout>

        <Button
            android:id="@+id/btn_Logout"
            android:layout_width="346dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="66dp"
            android:backgroundTint="@color/red_button"
            android:text="log out"
            android:textColor="@android:color/white"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>
